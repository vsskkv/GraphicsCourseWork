package coursework;

import org.lwjgl.opengl.GL11;

import GraphicsLab.Vertex;

public class Starfish {

	private void DrawStarFish() {
    	Vertex v1 = new Vertex(0f, -0.5f, 0.5f);
		Vertex v2 = new Vertex(0.5f, 0f, 0.5f);
		Vertex v3 = new Vertex(0f, 0.5f, 0.5f);
		Vertex v4 = new Vertex(-0.5f, 0f, 0.5f);
		
		Vertex v5 = new Vertex(0f, -0.5f, -0.5f);
		Vertex v6 = new Vertex(0.5f, 0f, -0.5f);
		Vertex v7 = new Vertex(0f, 0.5f, -0.5f);
		Vertex v8 = new Vertex(-0.5f, 0f, -0.5f);

		GL11.glBegin(GL11.GL_POLYGON);
		{
			v1.submit();
			v2.submit();
			v3.submit();
			v4.submit();
			
		}
		GL11.glEnd();
		
		GL11.glBegin(GL11.GL_POLYGON);
		{
			v5.submit();
			v6.submit();
			v7.submit();
			v8.submit();
			
		}
		GL11.glEnd();
		
		GL11.glBegin(GL11.GL_POLYGON);
		{
			v2.submit();
			v6.submit();
			v7.submit();
			v3.submit();
			
		}
		GL11.glEnd();
		
		GL11.glBegin(GL11.GL_POLYGON);
		{
			v1.submit();
			v5.submit();
			v6.submit();
			v2.submit();
			
		}
		GL11.glEnd();
		
		GL11.glBegin(GL11.GL_POLYGON);
		{
			v1.submit();
			v5.submit();
			v6.submit();
			v2.submit();
			
		}
		GL11.glEnd();
		
		GL11.glBegin(GL11.GL_POLYGON);
		{
			v8.submit();
			v7.submit();
			v3.submit();
			v4.submit();
			
		}
		GL11.glEnd();
    }
}
