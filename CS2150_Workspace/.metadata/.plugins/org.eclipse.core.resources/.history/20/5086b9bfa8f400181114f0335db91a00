package coursework;

import org.lwjgl.opengl.GL11;

import GraphicsLab.Vertex;

public class Starfish {
	
	

	private void DrawStarFish() {
    	Vertex v1 = new Vertex(1.0f, -0.5f, 1.0f);
		Vertex v2 = new Vertex(1.5f, -0.5f, 1.0f);
		Vertex v3 = new Vertex(2.0f, -0.5f, 0.5f);
		Vertex v4 = new Vertex(1.5f, -0.5f, 1.2f);
		Vertex v5 = new Vertex(2.5f, -0.5f, 2.0f);
		Vertex v6 = new Vertex(1.5f, -0.5f, 1.7f);
		Vertex v7 = new Vertex(1.2f, -0.5f, 2.5f);
		Vertex v8 = new Vertex(1.0f, -0.5f, 1.7f);
		Vertex v9 = new Vertex(0.7f, -0.5f, 1.2f);
		Vertex v10 = new Vertex(0.3f, -0.5f, 0.4f);

		GL11.glBegin(GL11.GL_POLYGON);
		{
			v1.submit();
			v2.submit();
			v3.submit();
			v4.submit();
			v5.submit();
			v6.submit();
			v7.submit();
			v8.submit();
			v9.submit();
			v10.submit();
			
		}
		GL11.glEnd();
		
    }
}
